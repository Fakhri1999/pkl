<div class="page-breadcrumb">
  <div class="row">
    <div class="col-7 align-self-center">
      <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">Perangkat</h4>
      <div class="d-flex align-items-center">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb m-0 p-0">
            <li class="breadcrumb-item text-muted active"><a href="/perangkat" class="text-muted">Perangkat</a></li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <a href="/perangkat/add" class="btn btn-primary mb-2">Tambah Perangkat</a>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">List Perangkat</h4>
          <div class="table-responsive">
            <table id="list-perangkat" class="table table-striped table-bordered no-wrap">
              <thead>
                <tr>
                  <th>No</th>
                  <th>ID Perangkat</th>
                  <th>Nama Perangkat</th>
                  <th>Deskripsi (Optional)</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {{#each dataPerangkat}}
                <tr>
                  <td>{{inc @index}}</td>
                  <td>{{this.id_perangkat}}</td>
                  <td>{{this.nama_perangkat}}</td>
                  <td>{{this.deskripsi_perangkat}}</td>
                  <td style="font-size:90%">
                    <a class="badge-pill badge-primary" href="/perangkat/{{this.rowid}}/edit"><i
                        class="far fa-edit"></i>
                      Edit</a>
                    <a class="badge-pill badge-danger" href="/perangkat/{{this.rowid}}/delete"
                      onclick="return confirm('Yakin akan menghapus perangkat?')"><i class="far fa-trash-alt"></i>
                      Hapus</a>
                  </td>
                </tr>
                {{/each}}
